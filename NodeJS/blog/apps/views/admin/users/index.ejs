<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%- include ../layout/head %>
</head>
<body>
    <%- include ../layout/menu %>
    <div class="container">
        <div class="row">
            <a href="/admin/post/add" class="btn btn-success">Create posts</a>
            <table class="table">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Created</th>
                    <th>Updated</th>
                </tr>
                </thead>
                <tbody>
                    <% if( data && data.users){%>
                        <% for(var i = 0; i < data.users.length; i++) {%>
                            <tr>
                                <td>
                                    <%= data.users[i].id %>
                                </td>
                                <td>
                                    <%= data.users[i].email %>
                                </td>
                                <td>
                                    <%= data.users[i].first_name %>
                                </td>
                                <td>
                                    <%= data.users[i].last_name %>
                                </td>
                                <td>
                                    <%= data.users[i].created_at %>
                                </td>
                                <td>
                                    <%= data.users[i].updated_at %>
                                </td>
                                <td>
                                    <a href="/admin/user/edit/<%= data.users[i].id %>" class="btn btn-primary">Edit</a>
                                    <button class="btn btn-danger user_delete" data-id="<%= data.users[i].id %>">Delete</button>
                                </td>
                            </tr>
                        <%}%>    
                    <%}%>    
                </tbody>
            </table>
        </div>
    </div>
    <script src="/static/js/user.js"></script>
</body>
</html> 